{
    "manifest_version": 3,
    "name": "Anime Homepage",
    "version": "1.0.0",
    "description": "Replace your new tab page with beautiful anime pictures!",
    "action": {
      "default_popup": "src/popup.html"
    },
    "chrome_url_overrides": {
      "newtab": "index.html"
    },
    "permissions": [
      "storage",
      "tabs",
      "topSites",
      "search"
    ],
    "host_permissions": [
      "chrome://newtab/*"
    ],
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "icons": {
      "48": "public/48.png",
      "128": "public/128.png"
    }
  }